  body
    div(class="flex-container")
      header
        h1
          a(href='/' style='text-decoration:none;') Blog
      nav(class="nav")
        a(href='/new' style='color:black; text-decoration:none; font-weight: bold;') NEW
        ul
          each val in list
            li
              a(href='/'+val.id)=val.title
      article(class="article")
        h1=list1.title
        p
        table(class="table table-hover")
          tr
            th name
            th email
            th phone
          tr
            td=list1.name
            td=list1.email
            td=list1.phone
        table(class="table table-hover")
          tr
            th contents
          tr
            td!=list1.contents
        a(class="btn btn-default" href="/"+list1.id+'/edit' role="button") Edit
        
                                 
